<!-- main website blog page -->
<!DOCTYPE html>
<html lang="en">
<head> 

    <%- include('./partials/head.ejs') %>
</head>
<body>
   
    <%- include('./partials/nav.ejs') %>

    <main>
        <section class="abt">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="wrapper">
                            <h2>Our Blog</h2>
                            <ol>
                                <li>Home<i class="flaticon-right-arrow"></i></li>
                                <li>Our Blog</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-06" id="blog">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="heading">
                            <h4>Blog</h4>
                            <h2>Explore Our News</h2>
                            <p>At Ã©Riaa, we're all about creating an experience that's both relaxing and entertaining. Our news blog is just one more way to keep you informed and engaged with our brand. So take a look around, explore our latest posts, and discover all that we have to offer.</p>
                        </div>
                    </div>
        
                    <div class="blog-main-card d-flex">
                        <% blog.forEach(function(blog) { %>
                            <article class="blog-sub">
                                <div class="blog-content">
                                    <a href="/blog/<%= blog._id %>">
                                        <img src="<%= blog.image.url %>" alt="Blog Image">
                                    </a>
                                </div>
                                <div class="blog-content-date">
                                    <% const month = blog.timeCreated.toLocaleString('default', { month: 'long' }).substring(0, 3); %>
                                    <% const day = blog.timeCreated.getDate(); %>
                                    <%= month %>
                                    <span> <%= day %></span>
                                </div>
                                <div class="blog-content-section">
                                    <div class="blo-content-title">
                                        <h4><%= blog.title %></h4>
                                        <p class="truncated-content">
                                            
                                              <%= blog.snippet %>
                                            
                                          </p>
                                          <a href="/blog/<%= blog._id %>" class="read-more-link">Read More</a>

                                    </div>
                                    <div class="blog-admin">
                                        <ol>
                                            <li><i class="fa fa-user-tie"></i> By admin </li>
                                            <li><i class="fa fa-calendar-alt"></i> <%= blog.timeCreated.toLocaleDateString() %></li>
                                        </ol>
                                    </div>
                                </div>
                            </article>
                        <% }) %>
                    </div>
                    
                 
                    
        
                        

                    
                    </div>
                </div>
            </div>
        </section>

        </main>



  


    <%- include('./partials/footer.ejs') %>
   
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/plugins/owl.carousel.min.js"></script>
    <script src="js/index.js"></script>
    <script src="js/cart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>