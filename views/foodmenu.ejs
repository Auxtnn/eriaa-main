<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/adminhead.ejs') %>
   
</head>

<body>
    <%- include('./partials/adminnav.ejs') %>
            
	<div class="col-md-11 col-lg-11 main-content">
		<h1>Menu Posts</h1>
		<div class="d-flex justify-content-between align-items-center mb-3">
			<h2>Post List</h2>
			<a class="nav-link" href="/menu-post/create">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addPostModal">
                    Add Post
                </button>
            </a>
		</div>
	
		<div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" style="width: 20%;">Name</th>
                        <th scope="col" style="width: 50%;">Description</th>
                        <th scope="col" style="width: 10%;">Price</th>
                        <th scope="col" style="width: 10%;">Category</th>
                        <th scope="col" style="width: 10%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% menu.forEach((menu) => { %>
                        <tr>
                            <td><%= menu.name %></td>
                            <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><%= menu.description %></td>
                            <td><%= menu.price %></td>
                            <td><%= menu.category %></td>
                            <td>
                                <div class="d-flex">
                                    <button type="button" class="btn btn-primary btn-sm" style="margin-right: .2rem;" data-toggle="modal" data-target="#editPostModal">
                                        <a href="/menu-post/edit/<%= menu.id %>" style="color: white;">Edit</a>
                                    </button>
                                    <form method="POST" action="/menu-post/<%=menu.id%>?_method=DELETE">
                                        <button type="submit" class="btn btn-danger btn-sm ml-1"><i class="fas fa-trash-alt"></i></button>
                                    </form>
                                </div>
                            </td> 
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
	</div>
	
    </div>
    <!-- Content End -->
</div>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Template Javascript -->
<script src="/js/admin.js"></script>
</body>

</html>
