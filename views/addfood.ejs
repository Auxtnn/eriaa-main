<!-- add food on admin dashboard -->
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/adminhead.ejs') %>
</head>

<body>
    <%- include('./partials/adminnav.ejs') %>
            
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addPostModalLabel">Add Food</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <a href="/menu-posts"><span aria-hidden="true">&times;</span></a>
                        </button>
                        <!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> -->
                    </div>
                    
                    <div class="modal-body">
                        <form method="POST" action="/menu-post" enctype="multipart/form-data" >
                            <div class="form-group">
                                <label for="postName">Name</label>
                                <input type="text" name="name" class="form-control" id="postName" required>
                            </div>
                            <div class="form-group">
                                <label for="postDescription">Description</label>
                                <textarea class="form-control" name="description" id="postDescription" rows="5" required></textarea>
                            </div>
                            <div class="form-group">
                                <label for="postCategory">Category</label>
                                <select name="category" id="foodCategory">
                                <option value="Grilled">Grilled</option>
                                <option value="Cooked">Cooked</option>
                                <option value="Baked">Baked</option>
                                <option value="Beverages">Beverages</option>
                                <option value="Deserts">Desserts</option>
                               </select>
                            </div>

                            <div class="form-group">
                                <label for="postPrice">Price</label>
                                <input name="price" type="number" class="form-control" id="postPrice" required>
                            </div>
                            <div class="form-group">
                                <label for="postImageMenu">Image</label>
                                <input name="image" type="file" class="form-control-file" id="postImageMenu" required>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal"><a href="/menu-posts">Cancel</a></button>
                                <input type="submit" value="Add" class="btn btn-primary">
                            </div>
                        </form>
                    </div>
                    
                </div>
        </div>
        <!-- Content End -->
    </div>

      <!-- JavaScript Libraries -->
    
      <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.min.js"></script>
      <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  
      <!-- Template Javascript -->
      <script src="/js/admin.js"></script>>
    

  <!-- <script src="js/index.js"></script> -->
</body>

</html>