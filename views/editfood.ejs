<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/adminhead.ejs') %>
</head>

<body>
    <%- include('./partials/adminnav.ejs') %>
            
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPostModalLabel">Edit Post</h5>
                <button type="button" class="close" data-dismiss="modal" data-bs-toggle="modal">
                    <a href="/menu-posts"><span aria-hidden="true">&times;</span></a>
                
            
            </div>
            
            <div class="modal-body">
               
                    <form method="POST" action="/menu-post/<%= menu._id %>?_method=PUT">

                    <div class="form-group">
                        <label for="postName">Name</label>
                        <input type="text" name="name" class="form-control" value="<%= menu.name %>" id="postName" required>
                    </div>
                    <div class="form-group">
                        <label for="postDescription">Description</label>
                        <textarea class="form-control" name="content" id="postDescription" rows="5" required><%= menu.description %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="postCategory">Category</label>
                        <select name="category" id="foodCategory" value="<%= menu.category %>">
                        <option value="Grilled">Grilled</option>
                        <option value="Cooked">Cooked</option>
                        <option value="Baked">Baked</option>
                        <option value="Beverages">Beverages</option>
                        <option value="Deserts">Deserts</option>
                       </select>
                    </div>
                    <div class="form-group">
                        <label for="postPrice">Price</label>
                        <input type="number" name="price" class="form-control" value="<%= menu.price %>" id="postPrice" required>
                    </div>
                    <!-- <div class="form-group">
                        <label for="postDateMenu">Date</label>
                        <input type="date" class="form-control" value="<%= menu.timeCreated.toLocaleDateString() %>" id="postDateMenu" required >
                    </div> -->
                    <div class="form-group">
                        <label for="postImageMenu">Image</label>
                        <input type="file" name="image" class="form-control-file" value="<%= menu.image %>" id="postImageMenu" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><a href="/menu-posts">Cancel</a></button>
                        <input type="submit" value="Update" class="btn btn-primary">
                    </div>
                </form>
            </div>
            
 



    <!-- Template Javascript -->
  
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/admin.js"></script>
<!-- <script src="/js/index.js"></script> -->
</body>
</html>