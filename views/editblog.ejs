<!-- for editing blog list on admin dashboard -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
</head>
<body>
    
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>


    <%- include('./partials/adminnav.ejs') %>
            
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPostModalLabel">Edit Post</h5>
                <button type="button" class="close" data-dismiss="modal" data-bs-toggle="modal">
                    <a href="/blogpost"><span aria-hidden="true">&times;</span></a>
                
            
            </div>
            
            <div class="modal-body">
                <form method="POST" action="/<%= blogPost._id %>?_method=PUT">
                    <div class="form-group">
                        <label for="postTitle">Title</label>
                        <input type="text" class="form-control" value="<%= blogPost.title %>" id="postTitle" required>
                    </div>
                    <div class="form-group">
                        <label for="postContent">Content</label>
                        <textarea class="form-control" id="postContent" rows="5" required><%= blogPost.content %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="postAuthor">Author</label>
                        <input type="text" class="form-control" value="<%= blogPost.author %>" id="postAuthor" required>
                    </div>
                    <div class="form-group">
                        <label for="postDate">Date</label>
                        <input type="date" class="form-control" value="<%= blogPost.author %>" id="postDate" required >
                    </div>
                    <div class="form-group">
                        <label for="postImage">Image</label>
                        <input type="file" class="form-control-file" value="<%= blogPost.image %>" id="postImage" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><a href="/blogpost">Cancel</a></button>
                        <input type="submit" value="Update" class="btn btn-primary">
                    </div>
                </form>
            </div>
            
 


    <h1>Edit Blog Post</h1>

<form action="/blog method="POST">
  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= blogPost.title %>" required>
  </div>
  <div>
    <label for="content">Content:</label>
    <textarea id="content" name="content" required><%= blogPost.content %></textarea>
  </div>
  <button type="submit">Update</button>
</form>

<a href="/blog">Back to Blog</a>

    <!-- Template Javascript -->
    <script src="/js/admin.js"></script>
  
<script src="js/plugins/owl.carousel.min.js"></script>
<script src="js/index.js"></script>
</body>
</html>